/**index.wxss**/

.container {
  display: flex;
  flex-direction: column;
}

.fixed-con {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 232rpx;
  z-index: 99;
}

.main-con {
  margin-top: 246rpx;
}

.swiper {
  position: relative;
  height: 300rpx;
}

swiper {
  height: 300rpx;
}

.scroll-view {
  flex: 1;
  height: 1020rpx;
}

swiper-item {
  border-left: 1px solid #eee;
}

.loc {
  background: #fff;
  font-size: 28rpx;
  color: #999;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.loc .navigator {
  padding: 15rpx 0;
}

.refresh {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.index-index {
  position: absolute;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  bottom: 10rpx;
  left: 10rpx;
  z-index: 98;
  background-color: #999;
  opacity: 0.7;
  color: #fff;
  border-radius: 15rpx;
}

.recommend {
  display: block;
  padding: 20rpx;
  font-size: 32rpx;
  background-color: #fff;
  color: #666;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.no-more {
  border-top: 1px solid #eee;
  text-align: center;
  font-size: 36rpx;
  color: #666;
  line-height: 80rpx;
  background-color: #fff;
}

.no-data {
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  display: flex;
  justify-content: center;
  padding: 20px 0;
  border-top: 1px solid#e4e4e4;
}
