/**index.wxss**/

.container {
  display: flex;
  flex-direction: column;
}

.swiper {
  position: relative;
  height: 300rpx;
}

swiper {
  height: 300rpx;
}

.scroll-view {
  flex: 1;
  height: 1020rpx;
}

swiper-item {
  border-left: 1px solid #eee;
}

.loc {
  background: #fff;
  padding: 20rpx;
  font-size: 28rpx;
  color: #999;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.refresh {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}

.index-index {
  position: absolute;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  bottom: 10rpx;
  left: 10rpx;
  z-index: 999;
  background-color: #999;
  opacity: 0.7;
  color: #fff;
  border-radius: 15rpx;
}

.recommend {
  display: block;
  padding: 20rpx;
  width: 100%;
  font-size: 32rpx;
  background-color: #fff;
  color: #666;
  text-align: center;
  border-bottom: 1px solid #eee;
}
