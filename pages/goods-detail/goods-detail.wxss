/* pages/goods-detail/goods-detail.wxss */

.goods-detail {
  background: #f7f7f7;
}

swiper {
  height: 750rpx;
}

swiper image {
  width: 100%;
  height: 750rpx;
}

.goods-purchasing {
  background: #f44;
  color: #fff;
  background: linear-gradient(90deg, #ff5d5d, #f44);
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.goods-detail-info {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}

.goods-detail-name {
  width: 100%;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
}

.goods-detail-current {
  color: #f44;
  font-weight: 700;
  font-size: 38rpx;
  margin-right: 10rpx;
}

.goods-detail-history {
  font-size: 28rpx;
  color: #959595;
  text-decoration: line-through;
}

.goods-detail-tag {
  background: #fff;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}

.goods-detail-tag  text {
  display: inline-block;
  padding: 5rpx 10rpx;
  border: 1px #f44 solid;
  color: #f44;
  font-size: 24rpx;
  border-radius: 4rpx;
}

.goods-detail-shop {
  display: flex;
  background: #fff;
  align-items: center;
  padding: 20rpx 30rpx;
}

.goods-detail-logo {
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.goods-detail-shopname {
  font-size: 28rpx;
  font-weight: 700;
  margin-left: 20rpx;
}

.goods-detail-name text {
  margin-bottom: 10rpx;
}

.goods-detail-address {
  display: flex;
  background: #fff;
  align-items: center;
  justify-content: space-between;
  position: relative;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  color: #656565;
}

.goods-detail-address view {
  display: flex;
  align-items: center;
}

.goods-detail-address::before {
  content: "";
  position: absolute;
  top: 0;
  left: 30rpx;
  right: 30rpx;
  height: 1px;
  background: #e4e4e4;
}

.goods-detail-address::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 1px;
  background: #e4e4e4;
}

.goods-detail-addressicon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}

.goods-detail-phone {
  width: 38rpx;
  height: 38rpx;
  padding: 12rpx;
}

.goods-detail-tips {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #656565;
  padding: 0 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.goods-detail-menu {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #656565;
  padding: 0 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.goods-detail-menu-con {
  background-color: #e4e4e4;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
}

.goods-detail-menu-top {
  overflow: hidden;
  margin-bottom: 10rpx;
}

.goods-detail-menu-btn {
  padding: 10rpx;
  text-align: center;
}

.goods-detail-time {
  display: flex;
  flex-direction: column;
}

.goods-detail-tip {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.goods-detail-li {
  line-height: 36rpx;
  font-size: 28rpx;
}

.start-comment {
  font-size: 24rpx;
  font-weight: normal;
  position: relative;
  color: #8e8e8e;
}

.goods-detail-comment {
  background: #fff;
  padding-bottom: 120rpx;
}

.goods-detail-allcomment {
  background: #f5f5f8;
  margin: 20rpx 30rpx;
  text-align: center;
  font-size: 28rpx;
  padding: 5rpx 0;
  border-radius: 5rpx;
}

.goods-detail-submit {
  display: flex;
  align-items: center;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.goods-detail-submit-item {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  border-top: 1px solid #eee;
  border-right: 1px solid #eee;
  align-items: center;
  height: 100rpx;
}

.goods-detail-submit-item image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.goods-detail-submit-item text {
  font-size: 24rpx;
  color: #666;
}

.goods-detail-submit-item text.active {
  color: #f44;
}

.goods-detail-btn {
  background: #f44;
  flex: 1;
  color: #fff;
  text-align: center;
  font-size: 38rpx;
  line-height: 100rpx;
}

.goods-detail-btn-no {
  background: rgb(199, 199, 199);
  flex: 1;
  color: #fff;
  text-align: center;
  font-size: 38rpx;
  line-height: 100rpx;
}

.goods-detail-title {
  color: #000;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}

.goods-comment-title {
  padding: 20rpx 0;
  margin: 0 30rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #eee;
}

.nocomment {
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  display: flex;
  justify-content: center;
  padding: 20px 0;
}
