/* components/comment/comment.wxss */

.comment-cmp {
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  background: #fff;
  position: relative;
}
.comment-cmp::after {
  content: "";
  position: absolute;
  background: #eee;
  height: 1px;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
}

.comment-cmp-top {
  display: flex;
  align-items: center;
}

.comment-cmp-user {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-cmp-title {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  flex: 1;
}

.comment-cmp-title text:first-child {
  font-weight: 700;
  color: #333;
}

.comment-cmp-title text:last-child {
  color: #666;
  font-size: 24rpx;
}

.comment-cmp-bot {
  padding: 20rpx 0 0 70rpx;
  display: flex;
  flex-direction: column;
}

.comment-cmp-bot text {
  color: #666;
  font-size: 26rpx;
  line-height: 32rpx;
  margin-bottom: 15rpx;
}
.comment-cmp-bot image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  vertical-align: middle;
  
}
