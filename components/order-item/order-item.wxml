<view class='order-item'>
  <image class='order-item-img' src='{{order.product_image}}'>
  </image>
  <view class='order-item-main'>
    <view class='order-item-title'>
      <text class='order-item-name'>{{order.product_name}}</text>
      <text class='order-item-address'>{{order.shop_address}}</text>
    </view>
    <view class='order-item-footer'>
      <text class='order-item-tiem'>{{order.created_at}}</text>
      <text wx:if="{{order.order_status==0}}" class='order-item-btn' bindtap='goToConsume'>去领取</text>
      <text wx:if="{{order.order_status==1&&order.comment_status==0}}" class='order-item-btn' bindtap='goToComment'>去评论</text>
    </view>
  </view>
</view>